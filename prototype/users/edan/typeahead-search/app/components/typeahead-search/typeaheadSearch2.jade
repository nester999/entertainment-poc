doctype html
html
  head
    meta(name="viewport", content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    base(href="/users/edan/typeahead-search/")

    title= title
    link(rel="stylesheet", href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
    //- link(rel="stylesheet", href="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.css")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel='stylesheet', href='assets/css/styles2.css')

  body(ng-app="NgtvPhase2", ng-controller="TypeaheadSearchController", ng-cloak )
    h2 Typeahead Search

    .p2-searchbar
      #search-arrow.ion-android-arrow-back
      
      //- debounce is the delay time before running sea
      input(type="text", placeholder="Movies, TV Shows, Actors" class="input", ng-keydown="checkKeyDown($event)", ng-keyup="checkKeyUp($event)", ng-model="searchText", ng-change="search()" ng-model-options="{ debounce: 300 }")
      ul#typeahead
        li(ng-repeat="suggestion in suggestions track by $index" ng-click="AssignValueAndHide($index)" ng-bind-html="suggestion | uppercase | boldMatch:searchText.toUpperCase()")
    .container
      h6(ng-hide="emptyInput") after typing, press left or right arrow to cycle through results. Enter to 

      ul#posters
        li
          img.poster(ng-repeat="poster in posters track by $index" ng-src="http://dtvimages.hs.llnwd.net/e1{{poster}}")

    script(src="http://code.jquery.com/jquery-2.1.4.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.1/angular-animate.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/3.9.3/lodash.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-route.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-sanitize.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js")
    script(src="assets/js/angular-hammer.js")
    script(src="assets/js/hammer.min.js")
    script(src="assets/js/gestures.js")
    script(src="app/app.js")
    script(src="app/components/typeahead-search/typeaheadSearchController2.js")
