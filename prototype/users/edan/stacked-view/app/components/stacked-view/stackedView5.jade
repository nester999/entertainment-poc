doctype html
html
  head
    meta(name="viewport", content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1")
    base(href="/users/edan/stacked-view/")

    title= title
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel='stylesheet', href='assets/css/styles5.css')

  body(ng-app="NgtvPhase2", ng-controller="StackedViewController", ng-cloak ng-class="{'disable-scrollbar' : disableScrollbar}" ng-style="style(stack)")
    h2.category-title Stacked View
    
    label(for="snake-effect") snake effect: {{staggerAnimTime}}
      input(type="range" name="snake-effect"  class="adjustment-slider" ng-model="staggerAnimTime" ng-change="calcStyle(stack)" min="0" max="100")
    label(for="velocity-multiplier" class="adjustment-slider") swipe velocity multiplier: {{velocityMultiplier}} 
      input(type="range" name="velocity-multiplier"  class="adjustment-slider" ng-model="velocityMultiplier" ng-change="console.log($scope.velocityMultiplier)" min="0" max="50")
    label(for="y-drop-rate") dropoff rate: {{yDropRate}}
      input(type="range" name="y-drop-rate"  class="adjustment-slider" ng-model="yDropRate" ng-change="console.log($scope.yDropRate)" min="0" max="500")
    label(for="z-dropoff-point" class="adjustment-slider") dropoff point: {{zDropoffPoint}} px
      input(type="range" name="z-dropoff-point"  class="adjustment-slider" ng-model="zDropoffPoint" ng-change="console.log($scope.zDropoffPoint)" min="-400" max="0")

    .stacked-view-container(hm-swipe="swipe($event)")
      .movie-poster(ng-repeat="movie in movieLinks" ) 
        img(src='{{movie.imgPath}}', alt='{{movie.title}}', ng-style="{'transform': movie.style.transform}")




    script(src="http://code.jquery.com/jquery-2.1.4.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-route.js")
    script(src="assets/js/angular-hammer.js")
    script(src="assets/js/hammer.min.js")
    script(src="assets/js/gestures.js")
    script(src="app/app.js")
    script(src="app/components/stacked-view/stackedViewController5.js")
