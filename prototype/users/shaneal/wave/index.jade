    script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.1/angular.min.js")
    //- script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.1/angular-animate.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js")
    //- script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.13.0/ui-bootstrap-tpls.min.js")
    script(src="/_shared/vendor/js/ct-ui-router-extras.js")

    // Components
    script(src="/_shared/ngtv2/components/asset-card/dtvAssetCard.js")
    script(src="/_shared/ngtv2/js/directives/dtvUtils.js")
    script(src="/_shared/ngtv2/js/directives/dtvBackground.js")
    script(src="/_shared/ngtv2/js/directives/dtvList.js")

    // Services
    script(src="/_shared/ngtv2/js/services/dtvApi.js")
    script(src="assets/js/services/env.js")

    // Common files for Mobile and Desktop
    script(src="assets/js/app.js")
    script(src="assets/js/services/intent.js")
    script(src="assets/js/directives/modal/dtvModal.js")
    script(src="assets/js/directives/modal/dtvModalVideoPlayerLink.js")
    script(src="assets/js/directives/modal/dtvModalDetailsTabletLink.js")
    script(src="assets/js/directives/modal/dtvModalDetailsLink.js")

    if browser === 'desktop'
      script(src="assets/components/desktop/header/header.controller.js")
      script(src="assets/components/desktop/home/home.controller.js")
      script(src="assets/components/desktop/home/grid/grid.controller.js")
    else
      script(src="assets/components/mobile/header/header.controller.js")
      script(src="assets/components/mobile/home/home.controller.js")

