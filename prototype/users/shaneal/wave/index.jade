    link(rel='stylesheet', href='assets/css/modal.css')
    link(rel='stylesheet', href='assets/css/modalVideo.css')

  body(ng-controller="AppCtrl", class="#{browser}")
    div(dtv-modal)

    header(ui-view="header")
    div(ui-view="body")
    
    //Libraries
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/3.10.1/lodash.min.js")
