doctype html
html(ng-app="homeApp")
  head
    meta(name="viewport", content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    title= title
    link(rel="stylesheet", href="https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.css")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel='stylesheet', href='assets/css/styles.css')
  body(layout="column")
    block content
      div(ng-controller="HomeCtrl", style="height:100%;")
      md-button.md-fab(ng-click="addItem()")
        md-icon(md-svg-src="/img/icons/ic_add_24px.svg", aria-label="Add")

      .overflow.fill
        .dtv-card-stack-container.fill(dtv-card-stack-view-container, layout="row", layout-align="start center")
          div(layout="row", layout-align="center center")
            .dtv-card-stack-view(dtv-card-stack-view)
              each poster in posters
                .dtv-card-stack.tv
                  .poster
                    div(dtv-image-fill, src="assets/img/posters/#{poster.src}")

    script(src='assets/js/fpsmeter.min.js')
    script(src='assets/js/scripts.js')
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
    
    block scripts